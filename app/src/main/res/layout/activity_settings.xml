<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_back_white"
    android:orientation="vertical"
    android:id="@+id/main"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="24dp"
        >

        <Button
            android:gravity="center"
            android:layout_marginVertical="4dp"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_black"
            app:icon="@drawable/arrowback"
            app:iconTint="@color/text_black"
            android:id="@+id/sets_back"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="@string/menu_sets"
            android:textColor="@color/text_black"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_back_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:paddingVertical="21dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/sets_padd_hor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_mode"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sets_text_size"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:height="16dp"
            android:gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_back_white"
        android:orientation="horizontal"

        android:gravity="center_vertical"
        >
        <TextView
            android:paddingVertical="@dimen/sets_padd_ver"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/sets_padd_hor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_app"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sets_text_size" />
        <Button
            app:iconGravity="textStart"

            android:layout_width="40dp"
            android:layout_height="22dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/share"
            app:iconTint="@color/unactive_gray"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_back_white"
        android:orientation="horizontal"

        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/sets_padd_hor"
            android:paddingVertical="@dimen/sets_padd_ver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_sprt"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sets_text_size" />
        <Button
            app:iconGravity="textStart"

            android:layout_width="40dp"
            android:layout_height="22dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/tech_sprt"
            app:iconTint="@color/unactive_gray"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_back_white"
        android:orientation="horizontal"

        android:gravity="center_vertical">

        <TextView
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/sets_padd_hor"
            android:paddingVertical="@dimen/sets_padd_ver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/usr_agree"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sets_text_size" />
        <Button
            app:iconGravity="textStart"

            android:layout_width="40dp"
            android:layout_height="22dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/nextarrow"
            app:iconTint="@color/unactive_gray"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>

</LinearLayout>
