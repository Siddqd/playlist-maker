<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">@dimen/margin_main_ver</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_main_hor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
<!--        <item name="android:background">?attr/colorSecondary</item>-->
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:radius">@dimen/corner_rad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/corner_rad</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsTextView">
        <item name="android:paddingVertical">21dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/sets_padd_hor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/sets_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

    </style>
    <style name="SettingsButton">
        <item name="iconGravity">textStart</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">?attr/colorOnPrimaryFixed</item>
    </style>
</resources>
